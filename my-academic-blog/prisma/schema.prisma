// 1. CONFIGURACIÓN DEL MOTOR
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. MODELO DE NÚMEROS / EDICIONES (NUEVO)
model Issue {
  id          String   @id @default(cuid())
  title       String   // Ej: "Vol. 1 - Dossier sobre IA"
  description String?  @db.Text
  coverImage  String?  // Portada del número completo
  publishedAt DateTime @default(now())
  isCurrent   Boolean  @default(false) // ¿Es el número actual en portada?
  
  submissions Submission[] // Los artículos que van dentro
}

// 3. MODELO PARA LOS ARTÍCULOS (MEJORADO)
model Submission {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  // Datos Públicos (Lo que ve el lector)
  title        String
  slug         String?   @unique // Para la URL amigable (ej: "impacto-ia-sociedad")
  abstract     String?   @db.Text
  keywords     String?   
  
  // Archivos
  fileUrl      String?   // El borrador original (Word/PDF del autor)
  finalPdfUrl  String?   // EL PDF FINAL MAQUETADO (Para descargar)
  contentHtml  String?   @db.Text // Versión lectura rápida (como tienes ahora)

  // Metadatos
  section      String    // Ej: "Artículos", "Reseñas"
  type         String?   // Ej: "Investigación", "Ensayo"
  
  // Relación con Número (Dossier)
  issueId      String?
  issue        Issue?    @relation(fields: [issueId], references: [id])

  // Datos del autor
  authorName          String
  email               String
  affiliation         String?   
  correspondingAuthor String? 

  // Estado y Gestión Interna
  status         String   @default("recibido") 
  editorialNotes String?  @db.Text
  reviewerNotes  String?  @db.Text
  reviewers      String?  

  reviews        ReviewToken[]
}

// 4. SISTEMA DE ANALÍTICA AVANZADA (EL CEREBRO DE DATOS)

// A. Contadores Rápidos (Para mostrar en el footer sin gastar recursos)
model PostMetric {
  slug      String   @id 
  views     Int      @default(0)
  downloads Int      @default(0)
  lastView  DateTime @default(now())
}

// B. Registro Histórico (Para tus gráficas de Día/Mes/Año)
model AnalyticsLog {
  id        Int      @id @default(autoincrement())
  slug      String   // Qué artículo vieron
  type      String   // "view" o "download"
  country   String?  // "SV", "MX"
  createdAt DateTime @default(now()) // LA CLAVE: Fecha exacta del clic

  @@index([createdAt]) // Para que las gráficas carguen rápido
}

model VisitorCountry {
  code  String @id 
  count Int    @default(1) 
}

// 5. MODELOS DE AUTENTICACIÓN (IGUAL QUE ANTES)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("AUTHOR") 
  createdAt     DateTime  @default(now())
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ReviewToken {
  id           String   @id @default(cuid())
  token        String   @unique 
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  reviewerName String?
  reviewerEmail String?
  status       String   @default("pendiente") 
  verdict      String?  
  feedback     String?  @db.Text 
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}