// 1. CONFIGURACIÓN DEL MOTOR
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. MODELO PARA LOS ARTÍCULOS
model Submission {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
   
  // Datos del artículo
  title        String
  section      String
  type         String?    
  abstract     String?    
  keywords     String?    
  fileUrl      String?

  // --- CAMPO NUEVO PARA MAQUETADO (Q1) ---
  contentHtml  String?  @db.Text
  // ---------------------------------------

  // Datos del autor
  authorName   String
  email        String
  affiliation String?    
  correspondingAuthor String? 

  // Estado y Gestión
  status         String    @default("recibido") 
  editorialNotes String?  
  reviewerNotes  String?  
  reviewers      String?  

  // Relación con las Revisiones
  reviews        ReviewToken[]
}

// 3. MODELOS DE AUTENTICACIÓN
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("AUTHOR") 
  createdAt     DateTime  @default(now())

  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 4. MODELO PARA REVISIÓN POR PARES (Enlaces Mágicos)
model ReviewToken {
  id            String   @id @default(cuid())
  token         String   @unique // El link secreto (ej: "xyz-123")

  // Relación con el Artículo
  submissionId  String
  submission    Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  // Datos del Revisor (Interno)
  reviewerName  String?
  reviewerEmail String?

  // Resultado de la revisión
  status        String   @default("pendiente") // "pendiente", "completado"
  verdict       String?  // "aceptar", "cambios", "rechazar"
  feedback      String?  @db.Text // Comentarios largos del experto

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
// ... (Tus modelos anteriores Submission, User, etc. siguen igual)

// 5. SISTEMA DE ANALÍTICA REAL
model PostMetric {
  slug      String   @id // El identificador del artículo (ej: "ciencia-politica-desinformacion")
  views     Int      @default(0)
  downloads Int      @default(0)
  lastView  DateTime @default(now())
}

model VisitorCountry {
  code      String   @id // Código de país (ej: "SV", "MX", "ES")
  count     Int      @default(1) // Cuántos visitantes de ese país
}